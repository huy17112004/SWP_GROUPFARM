<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Configuration -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=ASSSWP2;encrypt=true;trustServerCertificate=true</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">123</property>

        <!-- Dialect for SQL Server -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>

        <!-- Schema auto-generation (update for dev) -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Show SQL in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Add class want to mapping -->
        <mapping class="entity.Account"/>
        <mapping class="entity.Cart"/>
        <mapping class="entity.Category"/>
        <mapping class="entity.Contract"/>
        <mapping class="entity.Customer"/>
        <mapping class="entity.OrderRisk"/>
        <mapping class="entity.Product"/>
        <mapping class="entity.ProductImage"/>
        <mapping class="entity.ShippingLog"/>
        <mapping class="entity.WholesaleOrder"/>
        <mapping class="entity.WholesaleOrderItem"/>

    </session-factory>
</hibernate-configuration>
